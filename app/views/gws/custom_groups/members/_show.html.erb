<%
#return render inline: "User Not Found."
model = Gws::User
item  = @item.user
%>

<dl class="see">
  <dt><%= model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <% if member = @item.member %>
    <dt><%= model.t :uid %></dt>
    <dd><%= @item.send :uid %></dd>

    <dt><%= model.t :email %></dt>
    <dd><%= @item.send :email %></dd>

    <% if @item.tel.present? %>
    <dt><%= model.t :tel %></dt>
    <dd><%= @item.send :tel %></dd>
    <% end %>

    <dt><%= model.t :group_ids %></dt>
    <dd><%= br member.groups.order_by(name: 1).select{ |c| Gws::Group.site(@cur_site).pluck(:id).include?(c.id) }.map{|c| c.name}.join("\n") %></dd>
  <% end %>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.send :order %></dd>
</dl>
