<%= jquery do %>
  SS_AddonTabs.hide(".mod-gws-release");

  if ($.support.opacity) {
    // above IE9
    $(".mod-gws-release .datetime").
      datetimepicker({ lang: "ja", roundTime: 'ceil', step: 15 });
  }
<% end %>

<dl class="see mod-gws-release">
  <dt><%= @model.t :state %></dt>
  <dd><%= f.select :state, @item.state_options %></dd>

  <% if @item.try(:targetable?) %>
  <dt><%= @model.t :target %><%= @model.tt :target %></dt>
  <dd><%= f.select :target, @item.target_options %></dd>
  <% end %>

  <dt><%= @model.t :released %><%= @model.tt :released %></dt>
  <dd><%= f.text_field :released, class: "datetime", value: tryb{@item.released.strftime("%Y/%m/%d %H:%M")} %></dd>

  <dt><%= @model.t :release_date %><%= @model.tt :release_date %></dt>
  <dd><%= f.text_field :release_date, class: "datetime", value: tryb{@item.release_date.strftime("%Y/%m/%d %H:%M")} %></dd>

  <dt><%= @model.t :close_date %><%= @model.tt :close_date %></dt>
  <dd><%= f.text_field :close_date, class: "datetime", value: tryb{@item.close_date.strftime("%Y/%m/%d %H:%M")} %></dd>
</dl>
